{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Windows Health Check Configuration",
  "description": "Configuration file defining the steps for a Windows computer health check",
  "version": "1.0.0",
  "StepperSteps": [
    {
      "name": "SystemInfo",
      "description": "Collect system information and uptime",
      "scriptPath": "Steps/Step-SystemInfo.ps1",
      "enabled": true,
      "order": 1
    },
    {
      "name": "DiskSpace",
      "description": "Analyze disk space usage",
      "scriptPath": "Steps/Step-DiskSpace.ps1",
      "enabled": true,
      "order": 2
    },
    {
      "name": "WindowsUpdate",
      "description": "Check Windows Update status",
      "scriptPath": "Steps/Step-WindowsUpdate.ps1",
      "enabled": true,
      "order": 3
    },
    {
      "name": "CriticalServices",
      "description": "Verify critical services are running",
      "scriptPath": "Steps/Step-CriticalServices.ps1",
      "enabled": true,
      "order": 4
    }
  ]
}
